@model IEnumerable<bOOkStoreManagement.Models.Domain.Book>
@{
}

<div class="container pt-3">
    <div class="row">
        <div class="col-md-12">
            <h3 class="text-center">Books</h3>

            <table class="table table-stripped table-bordered table-dark text-center">
                <thead>
                    <tr>
                        <th>Title</th>
                        <th>Genre</th>
                        <th>Isbn</th>
                        <th>Total Pages</th>
                        <th>Author</th>
                        <th>Publisher</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Title</td>
                            <td>@item.GenreName</td>
                            <td>@item.Isbn</td>
                            <td>@item.TotalPages</td>
                            <td>@item.AuthorName</td>
                            <td>@item.PublisherName</td>
                            <td class="d-flex justify-content-center">
                                <a class="btn btn-success mx-1" href="/Book/Update?id=@item.Id"><i class="bi bi-pen"></i>Edit</a> | 
                                <a class="btn btn-danger mx-1" onclick="return window.confirm('Are you sure?')" href="/Book/Delete?id=@item.Id"><i class="bi bi-trash"></i>Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12 text-center">
            <a class="btn btn-dark" href="/Book/Add">+ Add More</a>
        </div>
    </div>
</div>
