@model IEnumerable<bOOkStoreManagement.Models.Domain.Genre>
@{
}

<div class="container pt-5">
    
    <div class="row">
        <div class="col-md-6">
            <h3 class="text-center">Genres</h3>

            <table class="table table-stripped table-bordered table-dark  text-center">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(var item in Model){
                    <tr>
                        <td>@item.Name</td>
                            <td class="d-flex justify-content-center">
                                <a class="btn btn-success  mx-1" href="/Genre/Update?id=@item.Id"><i class="bi bi-pen"></i> Edit</a> |
                                <a class="btn btn-danger  mx-1" onclick="return window.confirm('Are you sure?')" href="/Genre/Delete?id=@item.Id"><i class="bi bi-trash"></i> Delete</a>
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6 text-center">
            <a class="btn btn-dark" href="/Genre/Add">+ Add more</a>
        </div>
    </div>
</div>

